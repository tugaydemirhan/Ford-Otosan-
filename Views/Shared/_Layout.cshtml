<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title </title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="../fordd.png" rel="icon" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    
        

        <style>
            body {
                background: url("../yeni.jpg");
                background-size: cover;
                opacity: 1.0;
            }


            body, html {
                height: 100%;
            }
        </style>
</head>

<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="https://www.koc.com.tr/tr-tr" target="_blank"><img src="~/koccc.png" width="100" height="50" /></a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <!-- Herkesin gorebildigi butonlar -->
                    <li>@Html.ActionLink("Anasayfa", "Index", "Home")</li>
                    <li>@Html.ActionLink("İş İlanları", "Index", "ilans")</li>
                    <li>@Html.ActionLink("Ford Otosan Hakkında", "Hakkinda", "Home")</li>
                    @if (Session["UserName"] == null)
                    {
                        <!-- Giris yapmamis kullancilar -->
                        <li>@Html.ActionLink("Kayıt Ol", "Create", "Users")</li>
                        <li>@Html.ActionLink("Giris", "Login", "Home")</li>
                    }
                    else
                    {
                        <!-- Giris yapmis kullanicilar -->

                        if ((int)Session["isAdmin"] == 1)
                        {
                            <!--Admin hesabi ile gorulebilecek butonlar-->
                            <li>@Html.ActionLink("Kullanıcılar", "Index", "Users")</li>
                        }
                        else
                        {
                            <!-- User hesabi ile gorulebilecek butonlar-->

                        }

                        <li>@Html.ActionLink("Sorular", "Index", "Sorular")</li>
                        <li>@Html.ActionLink("Cikis", "Logout", "Users")</li>


                    }

                    <li>
                        <a href="https://www.instagram.com/fordotosankariyer/" class="fa fa-instagram"></a>
                    </li>
                    <li>
                        <a href="https://www.facebook.com/FordTurkiye" class="fa fa-facebook-f"></a>
                    </li>
                    <li>
                        <a href="https://tr.linkedin.com/company/ford-otosan" class="fa fa-linkedin"></a>
                    </li>

                </ul>
            </div>
        </div>
    </div>
    
    <div id="background">
        <div class="container body-content">
            @RenderBody()
            <footer>
                <p style="color:#fff;">2019 Ford.com.tr</p>
            </footer>
        </div>
    </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
</body>
</html>
